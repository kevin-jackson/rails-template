.content-header
  %h1= current_page_title
  .collection-actions
    = link_to "Add new client", new_admin_client_path, class: "btn"

- if @clients.present?
  %table
    %colgroup
      %col{style: 'width: 80%'}
      %col{style: 'width: 20%'}
    %thead
      %tr
        %th= "Name"
        %th.actions Actions
    %tbody
      - @clients.each do |client|
        %tr
          %td= client.name
          %td.actions
            /- if policy(user).edit?
            = link_to "Edit", edit_admin_client_path(client), class: "btn btn-small"
            /- if policy(user).destroy?
            = link_to "Delete", admin_client_path(client), :method => :delete, :data => { confirm: "Are you sure you want to delete #{client.name}?" }, class: "btn btn-small"
  /= paginate @clients

- else
  - if params[:q].present?
    %p No users matched your search.
  - else
    %p
      There are no clients.
      = link_to "Create a client.", new_admin_client_path
