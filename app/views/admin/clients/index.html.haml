.content-header
  %h1= current_page_title
  .collection-actions
    = link_to "Add new client", new_admin_client_path, class: "btn"

= search_form_for @ransack_query, method: :get, url: request.path do |s|
  = s.input :name_cont, label: "Search by name", placeholder: "Type name here: Test Client", as: :string, label_html: {class: "visually-hidden"}
  = s.button :submit, "Search"

- if @clients.present?
  %table
    %colgroup
      %col{style: 'width: 80%'}
      %col{style: 'width: 20%'}
    %thead
      %tr
        %th= "Name"
        %th.actions Actions
    %tbody
      - @clients.each do |client|
        %tr
          %td= client.name
          %td.actions
            = link_to "Edit", edit_admin_client_path(client), class: "btn btn-small"
            = link_to "Delete", admin_client_path(client), :method => :delete, :data => { confirm: "Are you sure you want to delete #{client}?" }, class: "btn btn-small"
  = paginate @clients

- else
  - if params[:q].present?
    %p No users matched your search.
  - else
    %p
      There are no clients.
      = link_to "Create a client.", new_admin_client_path
